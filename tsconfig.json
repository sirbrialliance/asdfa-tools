{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "lib",

		"noImplicitAny": true,
		"removeComments": false,
		"sourceMap": true,

		"lib": ["es6", "dom"],
		"module": "amd",
		"moduleResolution": "node",

		"rootDir": "web",
		"outFile": "build/main.js",

		"paths": {
			"lib/jsx-runtime": ["./web/lib/jsx-runtime"],
		},
	},
	"include": ["web/**/*.tsx"],
}