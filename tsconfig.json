{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "lib",

		"noImplicitAny": true,
		"removeComments": false,

		//source maps
		// "sourceMap": true,
		"inlineSourceMap": true,
		// "mapRoot": "build/",
		"sourceRoot": "web/",

		"lib": ["es6", "dom", "ES2017"],
		"module": "amd",
		"moduleResolution": "node",

		"rootDir": "web",
		"outFile": "build/main.js",

		"paths": {
			"lib/jsx-runtime": ["./web/lib/jsx-runtime"],
			"random-js": ["./third/random-js.esm.js"],
		},
		// "explainFiles": true, //debug

		"allowJs": true, //lets us inject lib files

		"noFallthroughCasesInSwitch": true,
		//"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,

		"plugins": [
			{"name": "typescript-eslint-language-service"}
		]
	},
	"include": [
		"web/**/*.tsx",
	],
	"files": [
		"web/third/random-js.esm.js",
	],
}