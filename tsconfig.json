{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "lib",

		"noImplicitAny": true,
		"removeComments": false,
		"sourceMap": true,

		"lib": ["es6", "dom", "ES2017"],
		"module": "amd",
		"moduleResolution": "node",

		"rootDir": "web",
		"outFile": "build/main.js",

		"paths": {
			"lib/jsx-runtime": ["./web/lib/jsx-runtime"],
			//"random-js": ["./node_modules/random-js/dist/random-js.esm.js"],
		},
		"allowJs": true,
		// "explainFiles": true,
	},
	"include": [
		"web/**/*.tsx",
	],
	"files": [
		"node_modules/random-js/dist/random-js.esm.js",
	],
}